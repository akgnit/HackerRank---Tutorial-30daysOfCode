#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;
int main() 
{
    double mealCost;
    int tipPercent;
    int taxPercent;
    double totalCost;
    cin>>mealCost>>tipPercent>>taxPercent;
    totalCost = mealCost * (1 + (tipPercent + taxPercent) / 100.0);
    totalCost=round(totalCost);
    cout<<"The total meal cost is "<<totalCost<<" dollars.";
    return 0;
}

